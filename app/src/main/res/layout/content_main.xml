<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <Button
        android:text=""
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button1"/><![CDATA[

    />

    ]]>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/textTest"
        android:textColor="#1FABDE"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <Button
        android:text="@string/contact_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_contact_btn"
        android:layout_marginBottom="44dp"
        android:background="@drawable/settingsbuttons"
        android:textColor="#1FABDE"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textTest"
        android:layout_alignStart="@+id/textTest" />

    <Button
        android:text="@string/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_pin_btn"
        android:background="@drawable/settingsbuttons"
        android:textColor="#1FABDE"
        android:layout_alignBaseline="@+id/set_contact_btn"
        android:layout_alignBottom="@+id/set_contact_btn"
        android:layout_alignRight="@+id/textTest"
        android:layout_alignEnd="@+id/textTest"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />


</RelativeLayout>
