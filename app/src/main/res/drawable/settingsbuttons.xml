<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="50dp"
                />
            <gradient
                android:gradientRadius="100"
                android:centerX="50%"
                android:centerY="50%"
                android:centerColor="#1FABDE"
                android:startColor="#00004C"
                android:endColor="#1FABDE"
                android:type="radial"
                />
            <size
                android:width="90dp"
                android:height="50dp"
                />
            <stroke
                android:width="3dp"
                android:color="#878787"
                />
        </shape>
    </item>



    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="50dp"
                />
            <solid
                android:color="#00004C"
                />
            <size
                android:width="90dp"
                android:height="50dp"
                />
            <stroke
                android:width="3dp"
                android:color="#878787"
                />
        </shape>
    </item>

</selector>
